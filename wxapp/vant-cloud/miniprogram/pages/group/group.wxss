/* pages/group/group.wxss */
page {
  height: 100%;
}

.group-body {
  background-color: #f2f2f2;
  width: 100%;
  height: 100%;
  padding: 40rpx 0;
  overflow-x: hidden;
  overflow-y: auto;
  box-sizing: border-box;
}

.public-list {
  width: 90%;
  background-color: #fff;
  margin: 0 auto 20rpx;
  border-radius: 20rpx;
}

.public-header {
  padding: 30rpx 20rpx;
  font-size: 35rpx;
  border-bottom: 5rpx solid #f2f2f2;
  display: flex;
}

.public-icon{
  margin-right: 18rpx;
}