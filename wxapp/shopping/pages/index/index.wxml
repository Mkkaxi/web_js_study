<!--pages/index/index.wxml-->
<view class="main">
  <swiper indicator-dots="true" autoplay="{{true}}" duration="{{duration}}" interval="{{interval}}" circular="true">
    <block wx:for="{{imgUrls}}" wx:key="{{index}}">
      <swiper-item class="" item-id="">
        <image class="slide-image" src="{{item}}"/>
      </swiper-item>
    </block>
  </swiper>

  <view class="selected">
    <view class="select-title">
      <text>精选主题</text>
    </view>
    <view class="select-top">
      <view class="select-top__small">
        <navigator url="../detail/detail">
          <image src="/image/s1.png"/>
        </navigator>
      </view>
      <view class="select-top__small">
        <navigator url="../detail/detail">
          <image src="/image/s2.png"/>
        </navigator>
      </view>
    </view>
    <view class="select-bottom">
      <navigator class="" target="" url="" hover-class="navigator-hover" open-type="navigate">
        <image src="/image/s3.png" />
      </navigator>
    </view>
  </view>

  <view class="newest">
    <view class="newest-title">
      <text>最近新品</text>
    </view>
    <view class="newest-box">
      <view class="newest-list">
        <navigator class="" target="" url="" hover-class="navigator-hover" open-type="navigate">
          <image src="/image/s4.png" />
          <view class="newest-name">
            <text>瓜子 100g</text>
          </view>
          <view class="newest-price">
            <text>¥ 0.01</text>
          </view>
        </navigator>
      </view>
      <view class="newest-list">
        <navigator class="" target="" url="" hover-class="navigator-hover" open-type="navigate">
          <image src="/image/s5.png" />
          <view class="newest-name">
            <text>芹菜 半斤</text>
          </view>
          <view class="newest-price">
            <text>¥ 0.02</text>
          </view>
        </navigator>
      </view>
      <view class="newest-list">
        <navigator class="" target="" url="" hover-class="navigator-hover" open-type="navigate">
          <image src="/image/s6.png" />
          <view class="newest-name">
            <text>素米 375g</text>
          </view>
          <view class="newest-price">
            <text>¥ 0.03</text>
          </view>
        </navigator>
      </view>
      <view class="newest-list">
        <navigator class="" target="" url="" hover-class="navigator-hover" open-type="navigate">
          <image src="/image/s5.png" />
