body, div, dl, dt, dd, ul, li, h1, h2, h3, h4, h5, h6, pre, code, form, fieldset, legend, input, button, textarea, blockquote
  margin 0
  padding 0

html
  background-color #f5f5f5
  color #333333
  font-size 32px

body
  min-width 320px
  max-width: 540px
  margin 0 auto
  font-size 16px
  padding-top 44px

.header-wrapper
  position fixed
  left 0
  right 0
  top 0
  z-index 2

.header
  height 44px
  line-height 44px
  min-width 240px
  background-color: #1ba9ba
  color #ffffff
  font-size 18px
  text-align center
  position relative
  padding 0 15px

.header-back
  position absolute
  left 0
  width 42px
  height 42px

.header-title
  max-width 216px
  font-size 100%
  margin 0